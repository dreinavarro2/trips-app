<h1>Itineraries</h1>

<p>
  <%= link_to 'New', { action: 'new' }, class: 'btn btn-default' %>
</p>

<h2>Remaining Budget:<em><%= number_to_currency(@remaining_budget, unit:'PHP') %></em></h2>

<table class="table">
  <tr>
    <th>Location</th>
    <th>Travel Date</th>
    <th>Estimated Cost</th>
    <th>Actions</th>
  </tr>
<% @itineraries.each do |itinerary| %>
  <tr style="<%= itinerary_row_style(itinerary) %>">
    <td><%= itinerary.location %></td>
    <td><%= itinerary.travel_on %></td>
    <td><%= itinerary.estimated_cost %></td>
    <td>
      <%= link_to 'Show', { action: 'show', id: itinerary.id }, class: 'btn' %>
      <%= link_to 'Edit', { action: 'edit', id: itinerary.id }, class: 'btn btn-default' %>
      <%= link_to 'Delete', { action: 'show', id: itinerary.id }, method: 'delete', confirm: "Are you sure you want to delete this?", class: 'btn btn-default' %>
    </td>
  <tr>
<% end %>
</table>